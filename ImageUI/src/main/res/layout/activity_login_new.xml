<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Login"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@drawable/background"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:orientation="vertical"
    >
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="48dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/login_margin"
        android:layout_marginRight="@dimen/login_margin"
        android:gravity="center|top">

        <ImageView
            android:layout_width="@dimen/login_logo"
            android:layout_height="72dp"
            android:src="@drawable/logo"
/>
        <Space
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:src="@drawable/logo_text"
            />
        <Space
            android:layout_width="fill_parent"
            android:layout_height="34dp" />
        <LinearLayout
            android:layout_width="254dp"
            android:orientation="vertical"
            android:layout_height="84dp"
            android:background="@drawable/cube_lightgray_balck">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_person"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtphone"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:textSize="@dimen/textsize_small"
                    android:hint="用户名/手机号"
                    android:textColorHint="@color/gray_30"
                    android:inputType="text|number"
                    android:textColor="@color/gray_80"/>

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_30"></View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_password"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtpsd"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:textSize="@dimen/textsize_small"
                    android:hint="密码"
                    android:textColorHint="@color/gray_30"
                    android:inputType="numberPassword"
                    android:textColor="@color/gray_80"/>
            </LinearLayout>

        </LinearLayout>
        <Space
            android:layout_width="fill_parent"
            android:layout_height="12dp" />
        <Button
            android:id="@+id/btnlogin"
            android:layout_width="254dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_brightgreen_green_rectangle"
            android:text="登录账户"
            android:textSize="@dimen/textsize_medium"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/txtfgpsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="忘记密码"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_small"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="fill_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有账户？"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_small"
                android:layout_gravity="right|center"/>
            <Button
                android:id="@+id/txtreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/white"
                android:text="来注册吧！"
                android:textSize="@dimen/textsize_small"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"/>
        </LinearLayout>




    </LinearLayout>





</LinearLayout>
