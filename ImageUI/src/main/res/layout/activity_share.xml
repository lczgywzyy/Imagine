<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/match_1_framelayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="770"
        android:orientation="horizontal"
        android:background="@color/transparent"
        android:layout_alignParentTop="true"
        >
    <ImageView
        android:id="@+id/share_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>

    </FrameLayout>

    <!--下方工具栏-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="510"
        android:background="@color/brightgreen"
        android:orientation="vertical"
        android:gravity="center">
        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="96">
            <ImageButton
                android:id="@+id/cutout_1_close_btn"
                android:background="@drawable/selector_common_pressed_50_back"
                android:padding="@dimen/btn_padding"
                android:layout_width="@dimen/btn_outter"
                android:layout_height="@dimen/btn_outter"
                android:src="@drawable/icon_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/save_to_album_btn"
                android:layout_width="70dp"
                android:layout_height="27dp"
                android:background="@drawable/selector_common_pressed_whiteframe"
                android:text="点击保存"
                android:textSize="@dimen/textsize_small"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/save_to_album_text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:text="点击保存到我的相册"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_medium"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="74"
            android:gravity="center|bottom">
            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginBottom="7dp"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:text="分享至"
                android:textSize="@dimen/textsize_micro"
                android:gravity="center|bottom"
                android:textColor="@color/white"
                />
            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginBottom="7dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="72"
            android:gravity="center">

            <ImageButton
                style="@style/match_3_btn"
                android:src="@drawable/icon_weixin"
                android:id="@+id/img_wx"
                />
            <Space
                style="@style/match_3_space_between_btn" />
            <ImageButton
                style="@style/match_3_btn"
                android:src="@drawable/icon_pengyouquan"
                android:id="@+id/img_wxf"
                />
            <Space
                style="@style/match_3_space_between_btn" />
            <ImageButton
                style="@style/match_3_btn"
                android:src="@drawable/icon_qq"
                android:id="@+id/img_qq"
                />
            <Space
                style="@style/match_3_space_between_btn" />
            <ImageButton
                style="@style/match_3_btn"
                android:src="@drawable/icon_weibo"
                android:id="@+id/img_weibo"
                />
            <Space
                style="@style/match_3_space_between_btn" />


            <Space
                style="@style/match_3_space_between_btn" />
            <ImageButton
                style="@style/match_3_btn"
                android:src="@drawable/icon_fenxiang" />
        </LinearLayout>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="0dp"
           android:layout_weight="132"
           android:gravity="center">
           <Button
               android:id="@+id/back_main"
               android:layout_width="70dp"
               android:layout_height="27dp"
               android:background="@drawable/selector_common_pressed_whiteframe"
               android:text="返回首页"
               android:textSize="@dimen/textsize_small"
               android:textColor="@color/white"
               />

       </LinearLayout>




    </LinearLayout>

</LinearLayout>