<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/scale"
            android:textColor="@color/gray_80"
            android:textSize="@dimen/textsize_medium"
            android:layout_gravity="left|center"
            android:gravity="center"
            />
       <Space
           android:layout_width="15dp"
           android:layout_height="fill_parent" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/crop_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_imageset_free"
                android:gravity="center"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="fill_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_imageset_11"
                android:gravity="center"/>

            <Space
                android:layout_width="15dp"
                android:layout_height="fill_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_imageset_34"
                android:gravity="center"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="fill_parent" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_imageset_43"
                android:gravity="center"/>
        </RadioGroup>
        <Space
            android:layout_width="20dp"
            android:layout_height="fill_parent" />
        <Button
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_brightgreen_green_rectangle"
            android:text="确定裁剪"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_medium"/>


    </LinearLayout>


</FrameLayout>