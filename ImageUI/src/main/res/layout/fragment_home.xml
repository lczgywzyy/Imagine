<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <Space
                android:layout_weight="2"
                android:layout_width="fill_parent"
                android:layout_height="0dp" />

          <!--  <pl.droidsonroids.gif.GifTextureView
                app:isOpaque="false"
                app:freezesAnimation="true"
                android:id="@+id/gifTextureView"
                android:layout_weight="1"
                app:gifSource="@drawable/gif"
                android:layout_gravity="bottom|right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"/>-->
        </LinearLayout>
        <!-- 云纹素材-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="440dp"
            android:src="@drawable/yunwen"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"/>

        <!--三个按钮和actionbar -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="20dp" />

            <!-- 串珠搭配和新组串珠-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:gravity="center">
                <!-- 串珠搭配 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/fast_start"
                        android:layout_width="@dimen/home_btnsize"
                        android:layout_height="93dp"
                        android:background="@drawable/chuanzhudapei" />
                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" 
                        android:text="@string/fast_start"
                        android:gravity="center"
                        android:textSize="@dimen/textsize_medium"
                        android:textColor="@color/gray_80"/>
                </LinearLayout>
                <Space
                    android:layout_width="90dp"
                    android:layout_height="fill_parent" />
                <!-- 新组串珠 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/pearl_build"
                        android:layout_width="@dimen/home_btnsize"
                        android:layout_height="93dp"
                        android:background="@drawable/zizhuzuzhu" />
                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pearl_build"
                        android:gravity="center"
                        android:textSize="@dimen/textsize_medium"
                        android:textColor="@color/gray_80"/>
                </LinearLayout>
            </LinearLayout>

            <!--素材制作和素材库-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:gravity="center">
                <!-- 素材制作 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                        <Button
                        android:id="@+id/material_build"
                        android:layout_width="@dimen/home_btnsize"
                        android:layout_height="93dp"
                        android:background="@drawable/zizhuzuzhu" />
                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/material_build"
                        android:gravity="center"
                        android:textSize="@dimen/textsize_medium"
                        android:textColor="@color/gray_80"/>
                </LinearLayout>

                <Space
                    android:layout_width="90dp"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/libirary"
                        android:layout_width="@dimen/home_btnsize"
                        android:layout_height="93dp"
                        android:background="@drawable/sucaiku" />
                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/library"
                        android:gravity="center"
                        android:textSize="@dimen/textsize_medium"
                        android:textColor="@color/gray_80"/>
                </LinearLayout>


            </LinearLayout>


            <!--我的相册&社区-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:gravity="center">
                <!-- 我的相册 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/myalbum"
                        android:layout_width="@dimen/home_btnsize"
                        android:layout_height="93dp"
                        android:background="@drawable/sucaiku" />
                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/myalbum"
                        android:gravity="center"
                        android:textSize="@dimen/textsize_medium"
                        android:textColor="@color/gray_80"/>
                </LinearLayout>

                <Space
                    android:layout_width="170dp"
                    android:layout_height="fill_parent" />

            </LinearLayout>

        </LinearLayout>



    </FrameLayout>

   
</LinearLayout>
