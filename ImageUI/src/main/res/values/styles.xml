<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Customize your theme here. -->
    </style>


    <!-- ScrimInsetLayout -->
    <style name="ScrimInsetsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_gravity">start</item>
        <item name="insetForeground">@color/nav_drawer_inset_foreground</item>
    </style>


    <!-- Material Design Navigation Drawer -->
    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_row_height</item>
        <item name="android:background">@drawable/nav_drawer_row_item_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowLayout.Main">
        <item name="android:tag">@string/tag_nav_drawer_main_entry</item>
        <item name="android:background">@color/toolbar_background</item>
    </style>

    <style name="NavDrawerRowLayout.Secondary">
        <item name="android:tag">@string/tag_nav_drawer_special_entry</item>
        <item name="android:background">@color/toolbar_background</item>
    </style>

    <style name="NavDrawerRowItemIcon">
        <item name="android:layout_width">@dimen/nav_drawer_item_row_icon_size</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_row_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_icon_left</item>
        <item name="colorStateList">@color/nav_drawer_row_icon</item>
    </style>

    <style name="NavDrawerRowItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/nav_drawer_item_main_text</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_text_left</item>
    </style>

    <style name="NavDrawerSectionSubheaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/nav_drawer_subheader_height</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/nav_drawer_section_subheader</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_icon_left</item>
    </style>

    <style name="NavDrawerAccountInfoText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.CustomDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>


    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <!-- match_3-->

    <!-- 分享按键之间的间隔-->
    <style name="match_3_space_between_btn">
        <item name="android:layout_width">@dimen/match_3_margen_between_btn</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 分享按钮-->
    <style name="match_3_btn">
        <item name="android:layout_height">@dimen/action_btn</item>
        <item name="android:layout_width">@dimen/action_btn</item>
        <item name="android:background">@drawable/selector_common_pressed_50_back</item>
    </style>
    <!-- 分享文字-->
    <style name="match_3_btn_text">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/action_btn</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:gravity">center|top</item>
    </style>


    <!-- fragment_cutout-->
    <!--按钮的布局 -->
    <style name="cutout_btn_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 按钮-->
    <style name="cutout_btn">
        <item name="android:layout_width">@dimen/btn_outter</item>
        <item name="android:layout_height">@dimen/btn_outter</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:background">@drawable/selector_common_pressed_white_hold</item>
    </style>
    <!-- 按钮文字-->
    <style name="cutout_btn_text">
        <item name="android:layout_width">@dimen/btn_outter</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|top</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/textsize_tiny</item>
    </style>


    <style name="dialog">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>
