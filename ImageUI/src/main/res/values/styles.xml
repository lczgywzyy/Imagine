<resources>
    <!-- Base application theme. 请修改，需要删除-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/brightgreen</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/green</item>

    </style>


    <!-- 不知道是什么用处的主题，请修改-->
    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>

    </style>

    <!-- 上面的那个不知道什么用处的主题引用的STYLE-->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>



    <!-- activity_share的样式-->

    <!-- 分享按键之间的间隔-->
    <style name="match_3_space_between_btn">
        <item name="android:layout_width">@dimen/match_3_margen_between_btn</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 分享按钮-->
    <style name="match_3_btn">
        <item name="android:layout_height">@dimen/action_btn</item>
        <item name="android:layout_width">@dimen/action_btn</item>
        <item name="android:background">@drawable/selector_common_pressed_50_back</item>
    </style>
    <!-- 分享文字-->
    <style name="match_3_btn_text">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/action_btn</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|top</item>
    </style>



    <!-- fragment_cutout的style-->
    
    <!--按钮的布局 -->
    <style name="cutout_btn_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 按钮-->
    <style name="cutout_btn">
        <item name="android:layout_width">@dimen/btn_outter</item>
        <item name="android:layout_height">@dimen/btn_outter</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_common_pressed_white_hold</item>
    </style>
    <!-- 按钮文字-->
    <style name="cutout_btn_text">
        <item name="android:layout_width">@dimen/btn_outter</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|top</item>
        <item name="android:textColor">@color/gray_80</item>
        <item name="android:textSize">@dimen/textsize_tiny</item>
    </style>
    
    <style name="dialog">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_30</item>
    </style>




    <!-- 从相册选择照片-->

    <!--按钮样式-->
    <style name="dialog_choose_pic_btn">
        <item name="android:textSize">@dimen/textsize_smalltitle</item>
        <item name="android:textColor">@color/gray_80</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_common_pressed_white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>






    <!-- 抽屉-->
    <!-- 人名部分文字-->
    <style name="drawerInfoText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 抽屉的每一个项目的样式-->
    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_row_height</item>
        <item name="android:background">@drawable/nav_drawer_row_item_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowLayout.Main">
        <item name="android:tag">@string/tag_nav_drawer_main_entry</item>
    </style>

    <style name="NavDrawerRowLayout.Secondary">
        <item name="android:tag">@string/tag_nav_drawer_special_entry</item>
    </style>

    <!-- 抽屉中每个项目按钮的样式-->
    <style name="NavDrawerRowItemIcon">
        <item name="android:layout_width">@dimen/nav_drawer_item_row_icon_size</item>
        <item name="android:layout_height">@dimen/nav_drawer_item_row_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_icon_left</item>
        <item name="colorStateList">@drawable/nav_drawer_row_icon</item>
    </style>
    <!-- 抽屉中每个项目文字的样式-->
    <style name="NavDrawerRowItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_smalltitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_vertical_keyline_text_left</item>
    </style>
</resources>
